  <div id="user-pic">
    <%=  image_tag "pajama_man.jpg"%>
  </div>

<div class = "user-profile">
  <h1> <%= @user.username %> </h1>

  <div id="personal-info">
    <ul>
      <li> Location: <%= @user.location %> </li>
      <li> Age: <%= @user.age %> </li>
      <li> <%= @user.registered_at %> </li>
    </ul>
  </div>
  <%= @user.bio %>
</div>

<div id="user-questions">
  <h2> <%= @user.questions.count%> ASKED QUESTIONS </h2>
  <ul>
  <% @user.questions.each do |question|%>
    <li><h3><%= question.title %></li>
    <li><%= question.votes.count %> votes</h3></li>
  <% end %>
  </ul>
</div>

<div id="user-answers">
  <h2> <%= @user.answers.count%> ANSWERS GIVEN </h2>
  <ul>
  <% @user.answers.each do |answer|%>
    <li><%= answer.question.title %>
    <%= answer.votes.count %></li>
  <% end %>
  </ul>
</div>

