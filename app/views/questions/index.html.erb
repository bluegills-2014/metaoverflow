<% content_for :title, "Questions Index" %>
<nav>
  <%= link_to "Ask a question", new_question_path %>
</nav>
<section id='show-questions-index'>
  <% @questions.each do |question| %>
    <h3><%= link_to question.title, question %></h3>
    <span><%= truncate_content(question, 200) %></span>
    <h5>
      Asked by <%= link_to question.user.username, question.user %> <%= format_date(question.posted_at) %>
    </h5>
    Answers: <%= question.answers.count %> |
    Responses: <%= question.responses.count %> |
    Tags: <% question.tags.each do |tag| %>
      <%= tag.word %>
    <% end %>
  <% end %>
</section>
